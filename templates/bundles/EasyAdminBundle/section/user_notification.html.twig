{% set header_notification_dropdown %}
    <ul class="dropdown-menu dropdown-menu-end py-2 px-3 fs-13px">
        <li>
            <div class="d-flex justify-content-between align-items-center">
                <div class='fw-semibold'>Notifications</div>
                <button class="btn btn-sm btn-link fs-12px">
                    Mark all as read
                </button>
            </div>
        </li>
        <li><hr class="dropdown-divider"></li>
        <li>
            {% block header_notification_container %}
            <div class="notification-container">
                <div class="notification-item d-flex">
                    <div class='notification-item-icon {{ notification_item_class|default('bg-secondary') }}'>
                        <img src='https://cdn-icons-png.flaticon.com/512/246/246562.png'>    
                    </div>
                    <div class='flex-fill px-2'>
                        <div class="fw-semibold">You have received a new operating system from your device upgrade</div>
                        <div class='border-top d-none'></div>
                        <span class='d-block fs-11px text-end'>Sep 10, 2024 - 9:55 AM</span>
                    </div>
                    <div class=''>
                        <div class="dropdown">
                            <button class="btn btn-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ...
                            </button>
                            <ul class="dropdown-menu fs-12px">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        Mark as read
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
        </li>
        <li><hr class="dropdown-divider"></li>
        <li>
            <a class='text-center d-block p-1' href='#'>
                Notification history
            </a>
        </li>
    </ul>
{% endset %}

<div class="user-notification-menu {{ baseClass|default('ms-3') }}">
    {% block header_notification %}
        <div class="dropdown header-notification">
            <a class="btn btn-secondary btn-notification position-relative" type="button" data-bs-offset="0,5" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                <i class="fas fa-bell animate__animated animate__swing animate__infinite"></i>
                <span class="badge text-bg-danger position-absolute top-0 start-100 translate-middle rounded-pill">
                    3
                    <span class="visually-hidden">unread messages</span>
                </span>
            </a>
            {{ header_notification_dropdown }}
        </div>
    {% endblock %}
</div>